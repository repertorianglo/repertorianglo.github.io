---
import { getCollection, render } from 'astro:content';
import BlogPostLayout from '../../../../../layouts/BlogPost.astro';

export async function getStaticPaths() {
	const postData = (await getCollection('tecnologia-e-inovacao'));
	return postData.map((post) => ({
		params: { slug: post.id },
		props: postData.filter(p => p.id === post.id)[0],
	}));
}


const post = Astro.props;

const postNumber = post.id.split('-')[0];
console.log('postNumber', postNumber);

const { Content } = await render(post);
const { titulo, dataPublicacao, responsavel, grupo } = post.data;

---

<BlogPostLayout
	eixo="6-tecnologia-e-inovacao"
	titulo={titulo}
	dataPublicacao={dataPublicacao}
	postNumber={postNumber}
	grupo={grupo}
	responsavel={responsavel}
>
	<Content />
</BlogPostLayout>