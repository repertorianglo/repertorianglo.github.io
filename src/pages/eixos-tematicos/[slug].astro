---
import { getCollection } from 'astro:content';
import EixosTematico from '../../layouts/EixosTematico.astro';

export async function getStaticPaths() {
	const eixos = await getCollection('eixosTematicos');
	return eixos.map((eixo) => ({
		// remove initial numbering and hyphen from slug
		params: { slug: eixo.id.replace(/^\d+-/, '') },
		props: eixo,
	}));
}

const eixo = Astro.props;
---
<EixosTematico {...eixo.data}>
</EixosTematico>