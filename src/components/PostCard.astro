---
import FormattedDate from './FormattedDate.astro';
import { Image } from 'astro:assets';

interface Props {
    href: string;
	heroImage: {
        default: string;
    };
    data: {
        titulo: string;
        subtitulo?: string;
        dataPublicacao: Date;
        responsavel?: string | undefined;
        criadoPor: string[] | undefined;
    };
}
const { href, heroImage, data } = Astro.props;
---
<a 
    class="post-card p-4"
    href={href}
    style="cursor: pointer; text-decoration: none; color: inherit;"
>
    <div class="postcard-content">
        {heroImage && (
            <div class="hero-image">
                <Image src={heroImage.default} alt={`${data.titulo} - Hero Image`} width={400} height={225} />
            </div>
        )}
        <h2 class="post-title mb-2 text-sm md:text-xl leading-none md:leading-[1.3]">{data.titulo}</h2>
        {data.subtitulo && <h3 class="post-subtitle text-sm md:text-md" style="margin-bottom: calc(var(--spacing) * 1);">{data.subtitulo}</h3>}
        <div class="post-meta text-sm md:text-md">
            <div class="post-date"><FormattedDate date={data.dataPublicacao} /></div>
        </div>
        {Array.isArray(data.criadoPor) && (
            <div class="post-students text-sm md:text-md mt-1">
                <strong>Criado por: </strong> {data.criadoPor.join(', ')}
            </div>
        )}
    </div>
</a>

<style>
.post-card {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    /* padding: 1.5rem; */
    box-shadow: var(--box-shadow);
    border: 1px solid rgba(var(--primary), 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.post-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--gray), 35%), 0 12px 32px rgba(var(--gray), 40%);
}

.postcard-content {
    display: flex;
    flex-direction: column;
}

.hero-image {
    width: 100%;
    margin-bottom: 0.5rem;
}

.hero-image img {
    display: block;
    width: 100%;
    height: auto;
    border-radius: 8px;
    object-fit: cover;
}

.post-title {
    font-weight: 700;
    color: rgb(var(--primary));
}

.post-subtitle {
    font-weight: 400;
    color: rgb(var(--primary));
    line-height: 1.3;
}

.post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    color: rgb(var(--gray));
}

.post-date {
    font-weight: 600;
}

.post-author {
    font-style: italic;
}

.post-group {
    background: rgba(var(--blue-anglo), 0.1);
    color: rgb(var(--blue-anglo));
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
}

.post-students {
    color: rgb(var(--gray-dark));
    padding: 0.5rem 0.75rem;
    background: rgba(var(--gray-light), 0.5);
    border-radius: 8px;
    border-left: 3px solid rgb(var(--blue-anglo));
}

.post-students strong {
    color: rgb(var(--primary));
}

@media (max-width: 768px) {    
    .post-card {
        padding: 1rem;
    }
    
    .post-title {
        font-size: 1.25rem;
    }
    
    .post-meta {
        flex-direction: column;
        gap: 0.5rem;
    }
}
</style>